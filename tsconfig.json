{
  "compilerOptions": {
    "strict": true,

    "lib": [
      "es2021"
    ],
    "target": "es2021",
    "moduleResolution": "node16",
    "module": "esnext",

    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
